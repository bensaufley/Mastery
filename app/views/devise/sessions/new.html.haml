- content_for :title, 'Sign In'
= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-group col-md-6 col-md-offset-3', role: 'form' }) do |f|
  .input-group.form-group
    .input-group-addon @
    = f.label :username, class: 'sr-only'
    = f.text_field :username, :autofocus => true, autocapitalize: false, autocorrect: false, placeholder: 'Username', class: 'form-control'
  .form-group
    = f.label :password, class: 'sr-only'
    = f.password_field :password, placeholder: 'Password', class: 'form-control'
  - if devise_mapping.rememberable?
    %label.form-group.checkbox
      = f.check_box :remember_me
      Remember me
  .pull-right= f.submit "Sign in", class: 'btn btn-primary'
.col-md-6.col-md-offset-3
  = render "devise/shared/links"
