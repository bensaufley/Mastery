- content_for :title, "Edit #{resource_name.to_s.humanize}"

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :method => :put, class: 'form-group col-md-6 col-md-offset-3', role: 'form' }) do |f|
  = devise_error_messages!
  .form-group.input-group
    .input-group-addon @
    = f.label :username, class: 'sr-only'
    = f.text_field :username, autofocus: true, autocapitalize: false, autocorrect: false, placeholder: 'Desired Username', class: 'form-control'
  .row
    .form-group.col-sm-6
      = f.label :first_name, class: 'sr-only'
      = f.text_field :first_name, autofocus: true, class: 'form-control ', autocapitalize: false, autocorrect: false, placeholder: 'First Name'
    .form-group.col-sm-6
      = f.label :last_name, class: 'sr-only'
      = f.text_field :last_name, class: 'form-control', autocapitalize: false, autocorrect: false, placeholder: 'Last Name'
  .form-group
    = f.label :email, class: 'sr-only'
    = f.email_field :email, autofocus: true, autocapitalize: false, autocorrect: false, placeholder: 'Email', class: 'form-control'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p.help-block
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group
    = f.label :password, 'Change password'
    %p.help-block (leave blank if you don't want to change it)
    = f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: 'off'
  .form-group
    = f.label :password_confirmation, class: 'sr-only'
    = f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control'
  .form-group
    = f.label :current_password
    %p.help-block (we need your current password to confirm your changes)
    = f.password_field :current_password, placeholder: 'Current Password', class: 'form-control'
  .pull-right= f.submit 'Update', class: 'btn btn-primary'

%section.col-md-6.col-md-offset-3
  %hr
  %h3 Cancel my account
  .btn-group.pull-right.dropup.clearfix
    %button.btn.btn-warning.dropdown-toggle{ data: { toggle: 'dropdown' }, type: 'button'}
      Unhappy?
      %span.caret
    %ul.dropdown-menu{ role: 'menu' }
      %li= link_to 'Cancel my account', registration_path(resource_name), :data => { :confirm => 'Are you sure?' }, :method => :delete
