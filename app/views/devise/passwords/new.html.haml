- content_for :title, 'Forgot your password?'
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-group col-md-6 col-md-offset-3' }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, class: 'sr-only'
    = f.email_field :email, :autofocus => true, class: 'form-control'
  .pull-right= f.submit "Send me reset password instructions", class: 'btn btn-primary'

.col-md-6.col-md-offset-3= render "devise/shared/links"
