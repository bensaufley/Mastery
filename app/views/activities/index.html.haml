%h1 Listing activities

%table
  %tr
    %th Name
    %th Type
    %th Private
    %th
    %th
    %th

  - @activities.each do |activity|
    %tr
      %td= activity.name
      %td= activity.type.titleize
      %td= activity.private
      %td= link_to 'Show', activity_path(activity.user,activity)
      %td= link_to 'Edit', edit_activity_path(activity.user, activity)
      %td= link_to 'Destroy', activity_path(activity.user,activity), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Activity', new_activity_path
